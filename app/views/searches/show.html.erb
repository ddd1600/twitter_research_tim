<h1>You searched for <p class="first"><%= params[:q] %></p></h1>

<pre>
  <% @results.inspect%>
</pre>
<ul>
  <% @results.each do |r| %>
    <li>
			<%= r.user %> <em>said</em> <%= r.text %>
			<% tweet = Tweet.new(twitter_user: r.user, tweeted_text: r.text, tweeted_at: r.time) %>
			<%= form_for(tweet) do |form| %>
			<%= form.hidden_field :twitter_user %>
			<%= form.hidden_field :tweeted_at %>
			<%= form.hidden_field :tweeted_text %>
			<%= form.submit('Save') %>	
		<% end %>
    </li>
    <%end%>
</ul>
